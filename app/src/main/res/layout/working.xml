<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fran.imachineappv2.MainActivityView">

    <TextView
        android:id="@+id/workingTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:text="@string/working"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="40dp"
        />

    <TextView
        android:id="@+id/workingTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/workingTitulo"
        android:text=""
        android:textSize="20sp"
        />

    <!--<ProgressBar-->
        <!--android:id="@+id/progressBar"-->
        <!--style="?android:attr/progressBarStyleHorizontal"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignEnd="@+id/workingTitulo"-->
        <!--android:layout_alignStart="@+id/workingTitulo"-->
        <!--android:layout_below="@+id/workingTexto"-->
        <!--android:layout_marginTop="50dp"-->
        <!--android:max="100"/>-->

    <com.daimajia.numberprogressbar.NumberProgressBar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/number_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/workingTexto"

        android:layout_marginTop="139dp"
        app:progress_max="100"

        app:progress_reached_bar_height="5dp"
        app:progress_reached_color="@color/colorPrimaryDark"
        app:progress_text_color="@color/colorPrimary"
        app:progress_text_offset="1dp"

        app:progress_text_size="25sp"
        app:progress_text_visibility="visible"
        app:progress_unreached_bar_height="5dp"
        app:progress_unreached_color="#CCCCCC" />

</RelativeLayout>