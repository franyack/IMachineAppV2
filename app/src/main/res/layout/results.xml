<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fran.imachineappv2.MainActivityView">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        android:text="@string/theeditionhasfinalized"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="40dp" />

    <Button
        android:id="@+id/btnConfirmResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnDeleteResults"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:background="@color/colorAccent"
        android:onClick="confirmResults"
        android:text="@string/confirmresults"
        android:textColor="#ffff"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/btnDeleteResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnBackToEditions"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:background="@color/colorAccent"
        android:onClick="deleteResults"
        android:text="@string/discardresults"
        android:textColor="#ffff"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/btnBackToEditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"
        android:onClick="backToEditions"
        android:text="@string/gobackedition"
        android:textColor="#ffff"
        tools:ignore="OnClick" />

</RelativeLayout>